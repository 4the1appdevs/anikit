html,body
  width: 100%
  height: 100%
  font-size: 18px

@font-face
  font-family: 'ldi'
  font-weight: normal
  font-style: normal
  src: url('../assets/lib/fonts/ldi.ttf') format('truetype')

.square
  width: 32px
  height: 32px
  border-radius: 3px
  /*background: linear-gradient(45deg,#f28,#2ff)*/
  background: linear-gradient(45deg,#444 0%,#444 15%,transparent 15%,transparent 18%,#444 10%)
  margin: 32px auto
.orange
  width: 64px
  height: 64px
  border-radius: 50%
  border: 6px solid
  border-color: #9cf transparent transparent transparent
  background: #48e
.d-flex .item
  flex: 1 1 96px
  overflow: hidden
  margin: 24px 32px
  padding: 8px 0
  text-align: center
  font-size: .875em
  cursor: pointer
  user-select: none
  &:hover
    background: rgba(0,0,0,.05)
