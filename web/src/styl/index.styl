html,body
  width: 100%
  height: 100%
  font-size: 18px

.square
  width: 32px
  height: 32px
  border-radius: 3px
  background: #444
  margin: 32px auto
.d-flex .item
  flex: 1 1 96px
  overflow: hidden
  margin: 24px 32px
  padding: 8px 0
  text-align: center
  font-size: .875em
  cursor: pointer
  user-select: none
  &:hover
    background: rgba(0,0,0,.05)
