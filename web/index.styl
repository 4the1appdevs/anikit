html,body
  width: 100%
  height: 100%
  margin: 0
  padding: 0

#root
  width: 80%
  height: 100%
  margin: 0 auto
  display: flex
  flex-wrap: nowrap
  .cell
    flex:  1 1 30%
    margin: auto 10px
    min-height: 300px
    position: relative
    background: #f9fafb

    border-radius: 10px


.tomato
  position: absolute
  top: 0
  left: 0
  bottom: 0
  right: 0
  width: 80px
  height: 80px
  border-radius: 50%
  overflow: hidden
  margin: auto
  &:after
    content: " "
    display: block
    width: 64px
    height: 64px
    border: 8px solid transparent
    border-radius: 50%
    transform: rotate(45deg)


.tomato.js
  background: #fd9
  &:after
    border-color: #f99 transparent transparent transparent

.tomato.css
  background: #df9
  &:after
    border-color: #7e6 transparent transparent transparent

.tomato.webgl
  width: 100%
  height: 100%
  overflow: visible
  canvas
    width: 100%
    height: 100%
    margin: 0
    padding: 0
    display: block
